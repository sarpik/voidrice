#!/usr/bin/env bash
# wifi-check

sleepTime=1

numberOfTries=0

until (ping -c1 kipras.org); do sleep $sleepTime; numberOfTries=$((numberOfTries + 1)); done

# print if internet was not already available on the first try
[ $numberOfTries -gt 0 ] && {
	export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus; export DISPLAY=:0; . $HOME/.profile;  notify-send "â™¨ wifi-check" "Internet available again!\nChecked $numberOfTries times."
}

