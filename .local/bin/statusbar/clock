#!/bin/bash

#date '+%Y %b %d (%a) %I:%M%p'	# 12h AM/PM
#date '+%Y %b %d (%a) %H:%M'		# 24h
#date '+%Y %m %d -- %H:%M -- %B, %a (%u)' # 24h, more stuff (bloated lmao)

dateLabel=ðŸ“…

# hour label generation:

# 01..12
currentHour="$(date '+%I')"

# 00..59
currentMinute="$(date '+%M')"

# boolean (1 or 0)
(( "$currentMinute" >= 30 )) && past30Mins="1" || past30Mins="0"

case $currentHour in
	00) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•›" || clockLabel="ðŸ•§" ;;
	01) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•" || clockLabel="ðŸ•œ" ;;
	02) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•" || clockLabel="ðŸ•" ;;
	03) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•’" || clockLabel="ðŸ•ž" ;;
	04) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•“" || clockLabel="ðŸ•Ÿ" ;;
	05) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•”" || clockLabel="ðŸ• " ;;
	06) [ "$past30Mins" = 0 ] && clockLabel="ðŸ••" || clockLabel="ðŸ•¡" ;;
	07) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•–" || clockLabel="ðŸ•¢" ;;
	08) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•—" || clockLabel="ðŸ•£" ;;
	09) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•˜" || clockLabel="ðŸ•¤" ;;
	10) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•™" || clockLabel="ðŸ•¥" ;;
	11) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•š" || clockLabel="ðŸ•¦" ;;
	12) [ "$past30Mins" = 0 ] && clockLabel="ðŸ•›" || clockLabel="ðŸ•§" ;;
	*)  clockLabel="â°" ;;
esac

# select which one to display
dateFormat="$dateLabel %Y %m %d (%u)"
timeFormat="$clockLabel %H:%M"
[ "$1" = "date" ] && format="+$dateFormat"
[ "$1" = "time" ] && format="+$timeFormat"
[ "$1" = "both" ] || [ -z "$1" ] && format="+$dateFormat $timeFormat" # 24h, less stuff

# display the date
date "$format"

case $BLOCK_BUTTON in
	1) pgrep -x dunst >/dev/null && \
		notify-send " " "$(cal --color=always --monday | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && \
		[ "$(calcurse -D ~/.config/calcurse -d3)" != "" ] && notify-send "Appointments" "$(calcurse -D ~/.config/calcurse -d3)" ;;
	2) $TERMINAL -e calcurse -D ~/.config/calcurse ;;
	3) notify-send "ðŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
esac
